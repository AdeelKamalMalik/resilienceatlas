.l-content--fullscreen
  .m-map#mapView
  .m-loader#loader loading
  .m-toolbar#toolbarView
    ul
      li.search
        span.search
          svg.icon
            use[xlink:href="#icon-search"]
      #searchBox.m-search-map
          input.searchMap(type="search"  placeholder="Search area")
          .searchContent.search-box
      li
        button.btn-share 
          span
            svg.icon
              use[xlink:href="#icon-share"]
          | Share
      li
        button.btn-analyze 
          span
            svg.icon 
              use[xlink:href="#icon-analyze"]
          | Analyze
  
  .m-legend#legendView
