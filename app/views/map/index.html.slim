.l-sidebar--fullscreen
  .l-sidebar-content
    .m-sidebar#sidebarView
      / ul.tabs.tabs-secondary-content role="tablist" attr="data-tab"
      /   li.tab-title.active
      /     a href="#layersListView" Layers
      /   li.tab-title
      /     a href="#analysisSelectorsView" Analysis

      / .tabs-content.content
      /   .m-layers-list.content.active#layersListView
