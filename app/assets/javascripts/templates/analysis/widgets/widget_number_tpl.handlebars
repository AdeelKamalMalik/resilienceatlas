<div class="name">{{name}}</div>

{{#if noData}}
  <div class="widget-no-data">
    <h3>NO DATA AVAILABLE</h3>
  </div>
{{else}}
  <div class="widget-number">
    {{#each data}}
      <div class="row">
        <div class="value">{{value}}</div>
        <div class="label">{{unit}}</div>
      </div>
    {{/each}}
  </div>
{{/if}}