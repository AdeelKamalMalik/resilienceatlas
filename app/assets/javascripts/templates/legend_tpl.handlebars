<header class="m-legend__header">
  <h2 class="title">Legend</h2>
  <span class="btn-minimize"></span>
</header>
<div class="m-legend__content">
  <ul class="m-legend__list">
  {{#each legends}}
    <li class="drag-items" data-id="{{this.id}}">
      <header>
        <h3>{{this.name}}</h3>
        <div class="actions">
          <button class="btn-action btn-visibility {{#if this.opacity_prev}}is-active{{/if}}" data-id="{{this.id}}">
            {{#if this.opacity_prev}}
              <svg><use xlink:href="#icon-visibilityoff"></use></svg>
            {{else}}
              <svg><use xlink:href="#icon-visibilityon"></use></svg>
            {{/if}}
          </button>
          <span class="btn-action btn-drag">
            <svg><use xlink:href="#icon-drag"></use></svg>
          </span>
        </div>
      </header>
      {{#if this.tpl}}
        {{{this.tpl}}}
      {{/if}}
    </li>
  {{/each}}
  </ul>
</div>
